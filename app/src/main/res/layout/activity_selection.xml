<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context=".main_section.Selection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/tempcard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Template 1"
                android:textAlignment="center"
                android:textColor="@color/whitecol" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:src="@drawable/res_template1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tempcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:text="Template 2"
                android:textAlignment="center"
                android:textColor="@color/whitecol" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:src="@drawable/res_template2" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>